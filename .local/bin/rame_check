#!/usr/bin/env bash

while true; do

# Get current RAM usage in GB (assuming you want to check against 5.6 GB)
ram_usage=$(free -g | awk '/^Mem:/{print $3}')

# Set limit for RAM usage in GB
limit=4

# Check if RAM usage exceeds the limit
if (( $(echo "$ram_usage >= $limit") )); then
    # Display notification
    notify-send "RAM Usage" "Current RAM Usage: $ram_usage GB"
fi
    # Wait for 5 minutes (300 seconds)
    sleep 300

done
